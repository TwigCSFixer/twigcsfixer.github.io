{% extends 'layout/page.html.twig' %}

{% set page = 'Rules & Standards' %}

{% block markdown -%}
    {{- source('@docs/rules.md')|raw }}
{%- endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        {# Select ul after h2#rules but before next one #}
        h2#rules ~ :is(ul):not(h2#rules ~ h2 ~ *):has(li p strong) {
            display: grid;
            grid-template-columns: 1fr;
            gap: var(--space-lg);

            li {
                p {
                    margin-block-end: var(--space-xs);
                }
                p:first-child {
                    
                    ~ * {
                        margin-inline-start: 1rem;
                    }
                    
                    font-size: .8rem;
                    font-weight: 300;
                    display: flex;
                    overflow: clip;

                    strong {
                        font-weight: 600;
                        font-size: 1.3rem;
                        margin-right: 10px;
                    }
                }
            }
        }
    </style>
{% endblock %}
