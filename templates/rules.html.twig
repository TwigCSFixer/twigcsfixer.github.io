{% extends "layout/page.html.twig" %}

{% set page = 'Rules & Standards' %}

{% block markdown -%}
    {{- source('@docs/rules.md')|raw }}
{%- endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        {# Select ul after h2#rules but before next one #}
        h2#rules ~ :is(ul):not(h2#rules ~ h2 ~ *):has(li p strong) {
            display: grid;
            grid-template-columns: 1fr;
            gap: var(--space-lg);

            li {
                background: color-mix(in oklch, var(--color-surface-secondary), transparent 70%);
                border: 1px solid var(--color-surface-secondary);
                border-radius: var(--radius-md);
                padding: var(--space-md);

                p:first-child {
                    border-block-end: 1px solid var(--color-surface-secondary);
                    padding-block-end: 1rem;
                    margin-block-end: 1rem;
                    font-size: .7rem;
                    font-weight: 300;
                    display: flex;
                    justify-content: space-between;
                    overflow: clip;

                    strong {
                        font-weight: 600;
                        font-size: 1.3rem;
                        margin-inline-end: 100%;
                    }
                }
            }
        }
    </style>
{% endblock %}
