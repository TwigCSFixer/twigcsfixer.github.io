{% extends "layout/base.html.twig" %}

{% block content %}

    <section class="hero">
        <div class="hero__container">
            <div class="hero__media">
                <a href="/" class="hero__icon">
                    <img src="/images/twig-cs-fixer-leaf.png" alt="Twig CS Fixer Logo" class="hero__logo">
                </a>
            </div>
            <svg class="hero__logotype" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 3281 538">
                <use href="#twig-cs-fixer-logo"></use>
            </svg>
            <h1 class="hero__title">Modern Twig Code Styling</h1>
            <p class="hero__subtitle">Automatically format and fix your Twig templates with intelligent, customizable rules</p>
            <div class="hero__actions">
                <a href="/installation" class="button button--large button--primary">Install Now</a>
                <a href="/installation" class="button button--large button--secondary">Learn More</a>
            </div>
            <div class="hero__actions">
                <a href="/installation" class="button button--large button--primary">Install Now</a>
                <a href="/installation" class="button button--large button--secondary">Learn More</a>
            </div>
        </div>
    </section>
    
    
    {{ include('component/_code_demo.html.twig', {
        before: '@docs/code/syntax.before.twig',
        after: '@docs/code/syntax.after.twig',
    }) }}

    <section class="features" id="features">
        <div class="features__container page-container">
            <h2 class="section-title">Why Choose Twig CS Fixer</h2>

            <div class="features__grid">
                <div class="feature">
                    <div class="feature__icon">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/>
                        </svg>
                    </div>
                    <h3 class="feature__title">Highly Configurable</h3>
                    <p class="feature__description">Customize rules to match your team's coding standards and preferences.</p>
                </div>

                <div class="feature">
                    <div class="feature__icon">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                            <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/>
                        </svg>
                    </div>
                    <h3 class="feature__title">Lightning Fast</h3>
                    <p class="feature__description">Optimized performance for quick processing of even large template collections.</p>
                </div>

                <div class="feature">
                    <div class="feature__icon">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M2 12h6"/>
                            <path d="M22 12h-6"/>
                            <path d="M12 2v6"/>
                            <path d="M12 22v-6"/>
                            <path d="M16 8l-4 4-4-4"/>
                            <path d="M8 16l4-4 4 4"/>
                        </svg>
                    </div>
                    <h3 class="feature__title">Seamless Integration</h3>
                    <p class="feature__description">Works with your existing workflow, CI/CD pipelines, and editor extensions.</p>
                </div>

                <div class="feature">
                    <div class="feature__icon">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"/>
                            <line x1="12" y1="8" x2="12" y2="12"/>
                            <line x1="12" y1="16" x2="12" y2="16"/>
                        </svg>
                    </div>
                    <h3 class="feature__title">Helpful Error Reports</h3>
                    <p class="feature__description">Clear, actionable feedback to help fix template issues quickly.</p>
                </div>
            </div>
        </div>
    </section>

    <section class="code-demo">
        <div class="code-demo__container">
            <div class="code-demo__before-after">
                <div class="code-panel">
                    <h3 class="code-panel__title">Before</h3>
                    <div class="code-window">
                        <div class="code-window__header">
                            <span class="code-window__dot"></span>
                            <span class="code-window__dot"></span>
                            <span class="code-window__dot"></span>
                        </div>
                        <div class="code-window__body">
                            <pre class="code-window__code"><code></code></pre>
                        </div>
                    </div>
                </div>

                <div class="code-panel">
                    <h3 class="code-panel__title">After</h3>
                    <div class="code-window">
                        <div class="code-window__header">
                            <span class="code-window__dot"></span>
                            <span class="code-window__dot"></span>
                            <span class="code-window__dot"></span>
                        </div>
                        <div class="code-window__body">
                            <pre class="code-window__code"><code></code></pre>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# Section "Prev / Next" #}
    {{ include('component/_prev_next.html.twig', {
        title: 'Ready to clean up your Twig templates?',
        text: 'Get started in minutes with simple installation and configuration',
        links: {
            '/installation': 'Installation Guide',
            '/examples': 'Examples',
        },
    }) }}

{% endblock %}
