<footer class="footer">
    <div class="footer__container">
        <div class="footer__content">
            <div class="footer__column">
                <h4 class="footer__heading">Twig CS Fixer</h4>
                <p class="footer__text">A modern tool for consistent Twig templates.</p>
            </div>
            <div class="footer__column">
                <h4 class="footer__heading">Links</h4>
                <ul class="footer__list">
                    {% for url, label  in {
                        '/installation': 'Installation',
                        '/configuration': 'Configuration',
                        '/examples': 'Examples',
                    } %}
                        {{ _self.nav_item(url, label) }}
                    {% endfor %}
                </ul>
            </div>
            <div class="footer__column">
                <h4 class="footer__heading">CS Rules</h4>
                <ul class="footer__list">
                    {% for url, label  in {
                        '/rules': 'Rules',
                        '/standards': 'Standards',
                        '/examples': 'Custom',
                    } %}
                        {{ _self.nav_item(url, label) }}
                    {% endfor %}
                </ul>
            </div>
            <div class="footer__column">
                <h4 class="footer__heading">GitHub</h4>
                <ul class="footer__list">
                    {% for label, url in {
                        'Pull Requests': github_url ~ '/pulls',
                        'Issues & RFC': github_url ~ '/issues',
                        'Discussions': github_url ~ '/discussions',
                    } %}
                        {{ _self.nav_item(url, label) }}
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="footer__bottom">
            <p class="footer__copyright">Twig CS Fixer Â© {{ 'now'|date('Y') }} <a
                    href="https://github.com/VincentLanglet">Vincent Langlet</a>. All rights reserved.</p>
        </div>
    </div>
</footer>

{% macro nav_item(url, label, class) %}
    <li>
        <a href="{{ url }}" class="footer__link">{{ label }}</a>
    </li>
{% endmacro %}
